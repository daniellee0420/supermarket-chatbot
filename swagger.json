{
    "openapi": "3.0.0",
    "info": {
        "title": "Watson Shop Public API",
        "version": "0.1.0"
    },
    "servers": [
        {
            "url": "https://supermarket-chatbot.netlify.app"
        }
    ],
    "paths": {
        "/api/product": {
            "post": {
                "summary": "Check product availability by it's name",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "product_name"
                                ],
                                "properties": {
                                    "product_name": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "product_name": "potato"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Available",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "success": false,
                                        "message": "Product is available to order"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Unavailable",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "success": false,
                                        "message": "Not found"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {},
    "tags": []
}